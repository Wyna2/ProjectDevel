<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTDMapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruby.mapper.MarketMapperInter">
  
  <select id="getTotalCount" resultType="int">
    select count(*) from Marketplace
  </select>
  
  <insert id="insertMarket" parameterType="marketdto">
	insert into Marketplace (category,brandname,subject,photo,original_price,price,color,content,upload_day) values (#{category},#{brandname},#{subject},#{photo},#{original_price},#{price},#{color},#{content},now())
  </insert>
  
  <select id="getAllDatas" resultType="marketdto">
	select * from Marketplace order by upload_day asc
  </select>
  
  <select id="getList" parameterType="HashMap" resultType="marketdto">
  	select * from Marketplace order by upload_day desc limit #{start}, #{perPage}
  </select>
  
  <select id="getData" parameterType="String" resultType="marketdto">
	select * from Marketplace where market_place_idx=#{market_place_idx}
  </select>
  
  <delete id="deleteMarket" parameterType="String">
 	delete from Marketplace where market_place_idx=#{market_place_idx}
  </delete>
  
  <!--검색 했을때 리스트 다시 그려주는 sql문  -->
</mapper>